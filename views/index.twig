{% extends "base.twig" %}
{% block title %}Voyage EC{% endblock %}
{% block menu %}
              <li class="active"><a href="#">Home</a></li>
{% endblock %}
{% block content %}
    <div class="page-header">
        <h1>最新のコンテンツ</h1>
    </div>
    <ul class="thumbnails">
    {% for content in contents.list %}
        <li class="span3">
            <div class="thumbnail">
                <img src="{{ content.image_path }}" alt="">
                <h5>{{ content.title }}</h5>
                <p>{{ content.description }}</p>
            </div>
        </li>
    {% endfor %}
    </ul>
    <ul class="pager">
        {% if contents.prev %}
        <li><a href="/{{ contents.prev }}">Prev</a></li>
        {% endif %}
        {% if contents.next %}
        <li><a href=" {{ contents.next }}">Next</a></li>
        {% endif %}
    </ul>
{% endblock %}
